<div class="card">
    <div class="card-header text-center">
        <h3> Administradores</h3>
    </div>

    <div class="text-center mt-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#administradores">
            <i class="fas fa-plus"></i> Nuevo
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-md mx-auto" id="tabla_admin" style="width: 100%;">
                <!--Agregar la clase 'table-sm' para reducir el tamano de la tabla-->
                <thead>

                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido paterno</th>
                        <th scope="col">Apellido materno</th>
                        <th scope="col">Fecha de nacimiento</th>
                        <th scope="col">Correo electrónico</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Privilegios</th>
                        <th scope="col">Foto</th>
                        <th scope="col">CURP</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(usuario=>{ %>
                        <tr>
                            <td><%= usuario.Nombre_usuario %></td>
                            <td><%= usuario.Apellido_Paterno %></td>
                            <td><%= usuario.Apellido_Materno %></td>
                            <td><%= usuario.Fecha_Nacimiento.toDateString() %></td>
                            <td><%= usuario.Correo %></td>
                            <td><%= usuario.Telefono %></td>
                            <td><%= usuario.Privilegios %></td>
                            <td><img src="/usuarios/<%= usuario.Foto %>" alt="Foto de perfil" style="width: 50px;"> </td>
                            <td><%= usuario.CURP %></td>
                            <td>
                                <button class="btn btn-primary btn-editar-usuario" data-id="<%= usuario._id %>" title="Editar usuario" onclick="llenar_modal('<%= usuario._id %>')"><i class="fas fa-pencil-alt"></i></button>
                                <button class="btn btn-danger btn-eliminar" data-id="<%= usuario._id %>"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                        <%})%>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        UESSJR
    </div>
</div>
